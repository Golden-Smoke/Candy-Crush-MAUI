<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Match3.UsernameEntryPage">
    <StackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="Enter Your Username" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="UsernameEntry" Placeholder="Enter username" FontSize="20" />
        <Label x:Name="ErrorMessageLabel" TextColor="Red" FontSize="18" IsVisible="False" HorizontalOptions="Center" />
        <Button Text="Submit" Clicked="OnSubmitButtonClicked" FontSize="20" />
    </StackLayout>
</ContentPage>